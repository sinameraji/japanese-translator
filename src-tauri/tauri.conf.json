{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Japanese Slack Translator",
  "version": "0.1.0",
  "identifier": "com.yc.japanese-slack-translator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Translation Overlay",
        "width": 550,
        "height": 420,
        "minWidth": 550,
        "minHeight": 420,
        "x": 50,
        "y": 30,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "visible": false,
        "center": false,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
